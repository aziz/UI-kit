<% content_for :east do %>
  <%= render :partial => 'info_pane' %>
<% end %>

<div class="btn-edit">
  <%= link_to 'Edit', edit_component_path(@component), :class => "btn-mac" %>
  <%= link_to 'Delete', component_path(@component), :confirm => 'Are you sure?', :method => :delete, :class => "btn-mac" %>
</div>
<div id="tabs" >

<ul class="btn-bar-mac ui-layout-north">
  <li><a href="#tabs-1">Preview</a></li>
  <li><a href="#tabs-2">HTML</a></li>
  <li><a href="#tabs-3">CSS</a></li>
  <li><a href="#tabs-4">Javascript</a></li>	
</ul>

<!-- <div > -->
<iframe id="tabs-1" class="ui-layout-center" src="<%= preview_component_path(@component) %>"></iframe>	
<!-- </div> -->

<div id="tabs-2" class="ui-layout-center">
<pre class="sh_html"><%=h @component.html %></pre>
</div>

<div id="tabs-3" class="ui-layout-center">
<pre class="sh_css"><%=h @component.css %></pre>
</div>

<div id="tabs-4" class="ui-layout-center">
<pre class="sh_javascript"><%=h @component.javascript  %></pre>
</div>

</div>

<%= javascript_include_tag "sh_main.min.js", "syntax-highlight-lang/sh_html.min.js", 
                            "syntax-highlight-lang/sh_css.min.js", "syntax-highlight-lang/sh_javascript.min.js",:cache => true %>
<script type="text/javascript" charset="utf-8">
  $(function(){
      // $("iframe").css("height",  $('.ui-layout-center').height() - $("#tabs .ui-tabs-nav").height() - 3 );  
      $("#tabs").layout({ 
        north: { resizable: false, size: 35, spacing_open: 0, closable: false} 
      });
      sh_highlightDocument();
  });
</script>
<style type="text/css" media="screen">
  @import "/stylesheets/sh_style.css";
  @import "/themes/syntax-highlight/sh_darkblue.min.css";
</style>