<h1>New component</h1>

<% form_for(@component) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <label>Category</label>  
    <%= f.select(:category_id, Category.all.collect {|c| [ c.name, c.id ] }, { :include_blank => true }) %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', components_path %>