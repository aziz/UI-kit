<div class="east-content">
  <h2><%=h @component.title %></h2>
  <hr />
  <% if @component.category %>
    <strong class="category">Category:</strong> <%=h @component.category.name %>
  <% end %>
  <h3>Browser Support:</h3>
  <p>
    <input type="checkbox" value="" <%= 'checked="checked"' unless @component.firefox.blank? %> disabled="disabled" / >
    <strong>Firefox</strong>
    <%=h @component.firefox %>
  </p>
  <p>
    <input type="checkbox" value="" <%= 'checked="checked"' unless @component.safari.blank? %> disabled="disabled" / >    
    <strong>Safari</strong>
    <%=h @component.safari %>
  </p>
  <p>
    <input type="checkbox" value="" <%= 'checked="checked"' unless @component.webkit.blank? %> disabled="disabled" / >    
    <strong>Webkit</strong>
    <%=h @component.webkit %>
  </p>
  <p>
    <input type="checkbox" value="" <%= 'checked="checked"' unless @component.opera.blank? %> disabled="disabled" / >    
    <strong>Opera</strong>
    <%=h @component.opera %>
  </p>
  <p>
    <input type="checkbox" value="" <%= 'checked="checked"' unless @component.ie.blank? %> disabled="disabled" / >        
    <strong>IE</strong>
    <%=h @component.ie %>
  </p>
  <p>
    <input type="checkbox" value="" <%= 'checked="checked"' unless @component.chrome.blank? %> disabled="disabled" / >        
    <strong>Chrome</strong>
    <%=h @component.chrome %>
  </p>
  
  <hr />
  
  <h3>Notes</h3>
  <div id="component_notes">
    <%=h @component.notes %>
  </div>  

</div>